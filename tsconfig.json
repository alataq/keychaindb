{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Environment Settings
    "module": "commonjs",
    "target": "es2022", // Updated for modern features
    "lib": ["es2022"],   // Required for the new target
    "isolatedModules": true,
    "moduleDetection": "auto",
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true,

    // Stricter Typechecking & Style
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Project references
    "composite": true,
    "allowJs": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "_test.ts"]
}